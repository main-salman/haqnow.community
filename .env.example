# Haqnow Community Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_ENV=production
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_this
JWT_ISSUER=haqnow.community
JWT_AUDIENCE=haqnow.clients
JWT_EXP_MINUTES=60

# Database (from Terraform output)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# S3 Storage (Exoscale SOS)
S3_ENDPOINT=https://sos-ch-gva-2.exoscale.com
S3_REGION=ch-gva-2
EXOSCALE_S3_ACCESS_KEY=your_s3_access_key
EXOSCALE_S3_SECRET_KEY=your_s3_secret_key

# S3 Buckets
S3_BUCKET_ORIGINALS=haqnow-community-dev-originals
S3_BUCKET_NORMALIZED=haqnow-community-dev-normalized
S3_BUCKET_DERIVATIVES=haqnow-community-dev-derivatives
S3_BUCKET_EXPORTS=haqnow-community-dev-exports
S3_BUCKET_TRASH=haqnow-community-dev-trash

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Optional: Ollama for AI features (future implementation)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1:8b-instruct
# OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
